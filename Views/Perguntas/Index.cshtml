@model IEnumerable<QuizzApp.Models.Pergunta>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Texto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resposta1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resposta2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resposta3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resposta4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RespostaCorreta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quizz)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Texto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resposta1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resposta2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resposta3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resposta4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RespostaCorreta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quizz.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
